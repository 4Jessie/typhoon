<assembly>
    <id>bin</id>
    <formats>
        <format>tar</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/lib/typhoon-1.0-SNAPSHOT</outputDirectory>
            <includes>
                <include>*.conf</include>
                <include>*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>typhoon_dispatcher.sh</include>
                <include>typhoon_worker.sh</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>